{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "zod": ["vendor/zod"]
    },
    "resolveJsonModule": true
  },
  "include": ["src", "vite-env.d.ts", "src/global.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "vitest.config.ts", "src/setupTests.ts"]
}
