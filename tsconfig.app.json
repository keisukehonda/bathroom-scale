{
  "compilerOptions": {
    "composite": true,                // ← references 構成なら必須
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",       // ← まず Node 解決で安定化
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["vite/client", "node"]
  },
  "include": ["src", "vite-env.d.ts", "src/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
